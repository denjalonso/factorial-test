{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for the user onboarding",
  "engines": {
    "node": ">=22.2.0",
    "npm": ">=9.6.7"
  },
  "scripts": {
    "dev:profile:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules --require source-map-support/register ./src/apps/profile/backend/start.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "start:profile:backend": "NODE_ENV=production node dist/src/apps/profile/backend/start",
    "test:features": "npm run test:profile:backend:features",
    "test:profile:backend:features": "NODE_ENV=test cucumber-js -p profile_backend",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "format": "prettier --write \"**/*.{js,ts}\""
  },
  "dependencies": {
    "@apollo/server": "4.10.5",
    "@apollo/subgraph": "2.8.4",
    "bodybuilder": "^2.4.0",
    "bson": "^4.5.2",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "convict": "6.2.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "copy": "^0.3.2",
    "cors": "2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.0",
    "express-validator": "7.1.0",
    "glob": "^7.2.0",
    "graphql": "16.9.0",
    "graphql-scalars": "1.23.0",
    "graphql-tag": "2.12.6",
    "helmet": "^4.6.0",
    "http-status": "^1.5.0",
    "node-dependency-injection": "^2.7.1",
    "nunjucks": "^3.2.3",
    "pg": "^8.7.1",
    "reflect-metadata": "0.2.2",
    "ts-node": "^10.2.1",
    "type-graphql": "2.0.0-rc.2",
    "typeorm": "^0.2.37",
    "uuid": "10.0.0",
    "uuid-validate": "0.0.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.5",
    "@types/bson": "^4.0.5",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/convict": "6.1.6",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.43",
    "@types/cors": "2.8.17",
    "@types/cucumber": "^6.0.1",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/glob": "^7.1.4",
    "@types/helmet": "0.0.48",
    "@types/jest": "^27.0.2",
    "@types/node": "22.1.0",
    "@types/nunjucks": "^3.2.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "10.0.0",
    "@types/uuid-validate": "0.0.3",
    "body-parser": "^1.20.2",
    "cucumber": "^6.0.5",
    "eslint": "^8.33.0",
    "eslint-config-codely": "^2.1.3",
    "faker": "^5.5.3",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "11.2.0",
    "prettier": "^2.4.1",
    "source-map-support": "0.5.21",
    "supertest": "^6.1.6",
    "ts-jest": "29.2.4",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "~1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "5.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  }
}
